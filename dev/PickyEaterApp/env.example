# Database Configuration
DATABASE_CONNECTION_STRING="Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=PickyEaterApp;Integrated Security=True;TrustServerCertificate=True"

# JWT Configuration
JWT_SECRET_KEY="your-super-secret-key-with-at-least-32-characters-change-this-in-production"
JWT_ISSUER="PickyEaterApp"
JWT_AUDIENCE="PickyEaterAppUsers"
JWT_EXPIRY_HOURS=24

# Application URLs
BASE_URL="https://localhost:5001"
API_URL="https://localhost:5001/api"

# CORS Configuration
ALLOWED_ORIGINS="https://localhost:3000,https://localhost:5173,http://localhost:3000,http://localhost:5173"

# Logging
LOG_LEVEL="Information"

# Food API Configuration (if using external food database)
FOOD_API_KEY="your-food-api-key-here"
FOOD_API_BASE_URL="https://api.food-database.com"

# Image Storage
IMAGE_UPLOAD_PATH="wwwroot/images"
MAX_IMAGE_SIZE_MB=10
ALLOWED_IMAGE_EXTENSIONS=".jpg,.jpeg,.png,.gif" 